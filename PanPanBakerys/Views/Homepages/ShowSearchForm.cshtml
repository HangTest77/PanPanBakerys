@model IEnumerable<PanPanBakerys.Models.Homepage>

@{
    ViewData["Title"] = "ShowSearchForm";
}

<h4>Search For Pastry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ShowSearchResult">

            <div class="form-group" mb-3">
                <label for="searchTerms" class="control-label"></label>
                <input id="searchTerms" name="searchTerms" class="form-control" 
                style="border: 2px solid #ccc; height: 40px" placeholder="Search..." 
            </div>

            <div class="form-group" mt-3 style="margin-top: 30px">
                <input type="submit"  value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div mt-3 style="margin-top: 20px">
    <a asp-action="Index">Back to List</a>
</div>
